.frete
    &__content
        display: block

    &__title
        box-shadow: none
        color: var(--secundary)

        .ico
            width: 24px
            height: 24px
            fill: var(--primary)

        span
            display: none

        &:after
            content: 'Calcular frete e prazo:'
            text-transform: uppercase
            font-weight: bold
            font-size: 16px

    &__form
        position: relative

        label
            display: none

        .input-text
            height: 48px
            border-radius: radius-size
            box-shadow: none

        .input-box
            flex: 1
            min-widht: 0

    &__actions
        position: absolute
        top: 0
        right: 0

        .btn
            height: 48px
            background: none
            box-shadow: none
            color: var(--secundary)
            font-weight: bold
            font-size: 16px

            span
                display: none

            &:before
                content: 'Calcular'

    &__naosei
        color: #474747
        text-align: center
        font-weight: medium
        font-size: 12px
        opacity: .5