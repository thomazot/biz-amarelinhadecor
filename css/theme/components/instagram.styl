.instagram
    &__container
        container()

    &__header
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        padding: gap 0

        .ico
            margin-bottom: 15px
            width: 45px
            height: 45px

    &__title
        a
            font-weight: bold
            font-size: 24px

    &__text
        font-weight: regular
        font-size: 14px

    &__list
        display: flex
        flex-flow: row wrap
        justify-content: space-between
        align-items: center
        gap: 5px

        @media media-min-lg
            gap: 30px

        img
            min-width: 100%
            object-fit: cover

        &:before, &:after
            order: 2
            content: ''

        a
            order: 1
            overflow: hidden
            border-radius: radius-size

        &:before, &:after, a
            flex: 1 1 260px
            min-width: 0