.mymenu
    .top-header &
        display: flex

        .a--0
            color: var(--primary-contrast)
            font-weight: medium
            font-size: 12px

        .a--1
            display: inline-block
            padding: 5px 0
            color: var(--secundary)

        .ul
            &--0
                display: flex
                flex: 1
                min-width: 0
                gap: 27px

        .icon-whatsapp
            margin-left: auto

        .li--0
            display: flex
            justify-content: flex-start
            align-items: center

            &:not(:last-child)
                margin-bottom: 0

        .parent
            position: relative

            > .ico
                margin-left: 3px
                width: 13px
                height: 7px
                fill: var(--primary)

            > ul
                position: absolute
                top: 100%
                left: 0
                visibility: hidden
                padding: (gap / 2)
                width: 200px
                border-radius: 0 0 3px 3px
                background: white
                box-shadow: 0 4px 4px rgba(0, 0, 0, .25)
                transition: none

            &:hover
                box-shadow: inset 0 -2px 0 var(--primary)

                > ul
                    visibility: visible

        a[href^=mailto]
            color: var(--primary)

    .footer &
        @media media-max-lg
            text-align: center

        .ul--0
            @media media-min-lg
                display: flex
                justify-content: space-between

        .a--0
            display: block
            padding-bottom: 15px
            color: var(--primary)
            text-transform: uppercase
            font-weight: bold
            font-size: 14px
            pointer-events: none

        .a--1
            color: white
            font-weight: medium
            font-size: 12px

        .li--0
            &:nth-child(1), &:nth-child(2)
                .ul--1
                    @media media-min-lg
                        column-gap: 50px
                        column-count: 2

            &:last-child
                @media media-min-lg
                    flex: 0 1 350px

                .ul--1
                    @media media-min-lg
                        display: flex
                        flex-flow: row wrap
                        justify-content: space-between

                        .li--1
                            flex: 0 1 140px
                            min-width: 0

                            &:last-child
                                flex: 1 1 100%

        .li--1
            opacity: 1

        .phone, .whatsapp
            font-weight: regular
            font-size: 12px

            a
                display: block
                padding: 10px 0
                color: var(--primary)
                font-size: 16px
                line-height: 1

        .phone:before
            content: 'Telefone'

        .whatsapp:before
            content: 'Whatsapp'

#home-categories
    --color-link: #8F8F8F

    .ul--0
        display: flex
        justify-content: space-between
        align-items: center
        padding: 20px 0
        gap: (gap / 2)

    .li--0
        flex: 1
        min-width: 0

    .a--0
        display: flex
        flex-flow: column nowrap
        justify-content: space-between
        align-items: center
        padding: 10px
        height: 110px
        border-radius: radius-size
        color: var(--color-link)
        text-align: center
        font-weight: medium
        font-size: 14px

        &:hover
            background: var(--primary)

        &:before
            display: inline-block

        span
            display: block

    .img
        &-tv a
            &:before
                content: url(img-tv)

        &-jantar a
            &:before
                content: url(img-jantar)

        &-estar a
            &:before
                content: url(img-estar)

        &-gourmet a
            &:before
                content: url(img-gourmet)

        &-externa a
            &:before
                content: url(img-externa)

        &-quartos a
            &:before
                content: url(img-quartos)

        &-parede a
            &:before
                content: url(img-parede)
