.product, .products
    &__case
        padding: (gap / 2)
        background: var(--color-products)
        box-shadow: none

        .product-rate, .preco-parcelado, .price-box-avista
            display: none

        .preco-parcelado-sem-juros
            &:before
                content: 'Parcele'

            .de, .value
                display: none

            &, .upto span, .num span, .s-juros span, .c-juros span
                font-size: 12px

            &, .upto span
                color: var(--color-payment-first)
                font-weight: bold

            .num span, .s-juros span, .c-juros span
                color: var(--color-payment-last)
                font-weight: regular

        .price-box
            margin-bottom: 4px

            .old-price
                .label
                    display: none

                .price
                    text-decoration: none

                    span
                        color: var(--color-old-price)
                        text-decoration: line-through
                        font-weight: regular
                        font-size: 12px

            .special-price, .regular-price
                .label
                    display: none

                .price span
                    color: var(--color-special-price)
                    font-weight: bold
                    font-size: 20px

    &__main
        padding: 0

    &__header
        margin-bottom: gap

        img
            min-width: 100%
            object-fit: contain

    &__name
        font-weight: medium
        font-size: 14px

    &__footer
        .button
            width: 100%
            height: 45px
            border-radius: radius-size
            background: var(--color-call-to-actions)
            box-shadow: none
            color: var(--secundary)
            text-transform: uppercase
            font-weight: bold
            font-size: 14px

            &:hover
                @media media-min-lg
                    background: var(--secundary)
                    color: var(--color-call-to-actions)

    &__title
        font-weight: regular
        font-size: 20px

        @media media-min-lg
            padding-left: gap

    &__list
        margin: 0

    &__item
        padding: 0 5px 10px

    &__duo
        @media media-min-lg
            display: flex
            justify-content: space-between

            .products__col
                &--left
                    flex: 0 1 190px

                &--right
                    flex: 0 1 160px

    .carrossel &
        &__item
            padding: 0 5px

    .owl-page
        span
            width: 8px
            height: 8px
            background: #ccc
            opacity: 1

        &.active span
            background: var(--primary)